<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center mt-4">
            New Restaurant
        </h1>
        <div class="col-md-6 offset-md-3">
            <form action="/restaurants" method="POST" noValidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="name">Name </label>
                    <input class="form-control" type="text" id="name" name="restaurant[name]" required>
                    <div class="invalid-feedback">
                        Required field
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="address">Address </label>
                    <input class="form-control" type="text" id="address" name="restaurant[address]" required>
                    <div class="invalid-feedback">
                        Required field
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="phoneNumber">Phone Number </label>
                    <input class="form-control" type="text" id="phoneNumber" name="restaurant[phoneNumber]" required>
                    <div class="invalid-feedback">
                        Required field
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="email">Email </label>
                    <input class="form-control" type="text" id="email" name="restaurant[email]" required>
                    <div class="invalid-feedback">
                        Required field
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="category">Category </label>
                    <input class="form-control" type="text" id="category" name="restaurant[category]" required>
                    <div class="invalid-feedback">
                        Required field
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image URL </label>
                    <input class="form-control" type="text" id="image" name="restaurant[image]" required>
                    <div class="invalid-feedback">
                        Required field
                    </div>
                </div>
                <div class="text-center mb-3"> <button class="btn btn-success">Add Restaurant</button></div>
            </form>
        </div>
    </div>